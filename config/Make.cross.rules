CC              = arm-linux-gnueabihf-gcc-4.6
CXX             = arm-linux-gnueabihf-g++-4.6

mklib		= arm-linux-gnueabihf-ar cr $(1) $(2)

mkshlib		= $(CXX) -shared $(LDFLAGS) -o $(1) -Wl,-h,$(2) $(3) $(4)

CPPFLAGS	+= -I$(CROSS_HOME)/usr/include

EXELDFLAGS	+= -L$(CROSS_HOME)/usr/lib/arm-linux-gnueabihf \
		   -Wl,-rpath-link,$(CROSS_HOME)/usr/lib/arm-linux-gnueabihf