OBJPREFIX                       = $(ICEE_TARGET_OS)/$(ARCH)

ice_install_lib_dir             ?= $(prefix)/lib


PYTHON_BASEVERSION              ?= 2.7

ifneq ($(SDKTARGETSYSROOT),)
    python_include_dir          = $(SDKTARGETSYSROOT)/usr/include/python$(PYTHON_BASEVERSION)
endif

ifeq ($(prefix),$(base_prefix)/usr)
    python_install_dir          ?= $(prefix)/lib/python$(PYTHON_BASEVERSION)/site-packages
else
    python_install_dir          ?= $(prefix)/python$(PYTHON_BASEVERSION)/
endif

SLICE2PY                        = $(ice_bin_dir)/slice2py
