TARGET_OS	?= wheezy

ifeq ($(filter $(TARGET_OS),wheezy trusty vivid),)
$(error Invalid TARGET_OS: `$(TARGET_OS)' supported values are: `wheezy', `trusty' and `vivid'))
endif

ifeq ($(TARGET_OS),wheezy)
GCC_VERSION	= 4.6
endif

ifeq ($(TARGET_OS),trusty)
GCC_VERSION	= 4.8
endif

ifeq ($(TARGET_OS),vivid)
GCC_VERSION	= 4.9
endif

CC		= arm-linux-gnueabihf-gcc-$(GCC_VERSION)
CXX             = arm-linux-gnueabihf-g++-$(GCC_VERSION)
STRIP		= arm-linux-gnueabihf-strip
mklib		= arm-linux-gnueabihf-ar cr $(1) $(2)

ifneq ($(THIRDPARTY_HOME),)
CPPFLAGS	+= -I$(THIRDPARTY_HOME)/usr/include
LDFLAGS		+= -L$(THIRDPARTY_HOME)/usr/lib/arm-linux-gnueabihf \
		   -Wl,-rpath-link,$(THIRDPARTY_HOME)/lib/arm-linux-gnueabihf
endif